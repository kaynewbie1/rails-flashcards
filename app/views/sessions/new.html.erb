<h1>Login</h1>

<% if @errors %>
  <% if @errors.any? %>
    <ul>
    <% @errors.full_messages.each do |msg| %>
    <li> <%= msg %> </li>
    <% end %>
    </ul>
  <% end %>
<% end %>

<%= form_for :session, url: sessions_path do |f| %>
  <p><%= f.label :username %>
    <%= f.text_field :username %>
  </p>

  <p><%= f.label :password %>
    <%= f.password_field :password %>
  </p>

  <p><%= f.submit %></p>

<% end %>

<h1>Register</h1>
<ul>
<% if @user.errors.any? %>
<% @user.errors.full_messages.each do |msg| %>
<li> <%= msg %> </li>
<% end %>
</ul>
<% end %>

<%= form_for :user, url: users_path do |f| %>
  <p><%= f.label :username %>
    <%= f.text_field :username %>
  </p>

  <p><%= f.label :email %>
    <%= f.text_field :email %>
  </p>

  <p><%= f.label :password %>
    <%= f.password_field :password %>
  </p>

  <p><%= f.submit %></p>

<% end %>
